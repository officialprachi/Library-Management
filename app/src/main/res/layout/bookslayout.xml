<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121213">

    <!-- CardView for book1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="33dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/book1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/book1" />
    </androidx.cardview.widget.CardView>

    <!-- TextView for book1 title -->
    <TextView
        android:id="@+id/book_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="'My name is not devdas'"
        android:textColor="@color/librarymanagement"
        android:textSize="19dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview1" />

    <!-- ImageButton for saving book1 -->

    <!-- Button for issuing book1 -->

    <ImageButton
        android:id="@+id/save_Btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/save_button_description"
        android:src="@drawable/savebtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview1" />

    <Button
        android:id="@+id/issue_btn1"
        android:layout_width="83dp"
        android:layout_height="42dp"
        android:backgroundTint="@color/librarymanagement"
        android:text="Issue"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@id/cardview1"
        app:layout_constraintTop_toBottomOf="@id/book_title1" />

    <!-- CardView for book2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
