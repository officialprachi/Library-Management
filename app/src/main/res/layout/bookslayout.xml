    <!-- ImageButton for saving book2 -->

    <!-- Button for issuing book2 -->
    <ImageButton
        android:id="@+id/savebtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/save_button_description"
        android:src="@drawable/savebtn"
        app:layout_constraintStart_toEndOf="@+id/issue_btn1"
        app:layout_constraintTop_toBottomOf="@+id/book_title2" />

    <Button
        android:id="@+id/issuebtn2"
        android:layout_width="83dp"
        android:layout_height="42dp"
        android:backgroundTint="@color/librarymanagement"
        android:text="Issue"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@id/cardview2"
        app:layout_constraintTop_toBottomOf="@id/book_title2" />

